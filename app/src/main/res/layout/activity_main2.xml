<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:background="#0E0202"
    android:gravity="center">
    <TextView

        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_gravity="left"
        android:text="@string/java_user_name"
        android:textSize="26sp" />

    <ImageView

        android:layout_width="263dp"
        android:layout_height="193dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/virtualgymtagline" />

    <TextView
        android:background="@drawable/list_item_background"
        android:id="@+id/ml_exercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:padding="20dp"
        android:text="@string/java_entry_title"
        android:textSize="26sp" />

    <TextView
        android:background="@drawable/list_item_background"
        android:id="@+id/exercise_learn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:padding="20dp"
        android:text="@string/kotlin_entry_title"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/timer_workout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:background="@drawable/list_item_background"
        android:padding="20dp"
        android:text="@string/own_workout"
        android:textSize="26sp" />
    <TextView
        android:id="@+id/logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="@drawable/list_item_background"
        android:padding="12dp"
        android:text="LOGOUT"
        android:textSize="20sp" />


</LinearLayout>